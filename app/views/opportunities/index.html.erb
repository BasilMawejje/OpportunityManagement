<% @opportunities.each do |opportunity| %>
  <b>Account:</b> <%= opportunity.account.account_name %><br>
  <b>Opportunity name:</b> <%= opportunity.opp_name %><br>
  <b>Opportunity description:</b> <%= opportunity.opp_description %><br>
  <b>Amount:</b> <%= opportunity.amount %><br>
  <b>Stage:</b> <%=  opportunity.stage.stage_progress %><br><br>
<% end %>

<%= link_to 'Create Opportunity', new_opportunity_path, class: "btn btn-primary btn-sm" %><br><br>
<%= link_to 'back', accounts_path, class: "btn btn-danger btn-sm", style: "width: 15%;" %>
