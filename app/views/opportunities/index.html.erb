<% @opportunities.each do |opportunity| %>
  Account: <%= opportunity.account.account_name %><br>
  Opportunity name: <%= opportunity.opp_name %><br>
  Opportunity description: <%= opportunity.opp_description %><br>
  Amount: <%= opportunity.amount %><br>
  Stage: <%=  opportunity.stage.stage_progress %><br><br>
<% end %>

<%= link_to 'Create Opportunity', new_opportunity_path, class: "btn btn-primary btn-sm" %><br><br>
